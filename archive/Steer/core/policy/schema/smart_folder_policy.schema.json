{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "SmartFolderPolicy",
  "type": "object",
  "required": [
    "path"
  ],
  "properties": {
    "path": {
      "type": "string",
      "description": "Absolute folder path"
    },
    "agents": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": [
          "knowledge_search",
          "meeting",
          "photo"
        ]
      },
      "description": "Agents enabled for this folder"
    },
    "allow_types": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Optional file extension allowlist (e.g. ['pdf', '.md'])"
    },
    "deny_types": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Optional file extension denylist (e.g. ['exe', 'zip'])"
    },
    "max_file_size_mb": {
      "type": "integer",
      "minimum": 0,
      "description": "Optional max allowed file size in MB"
    },
    "agent_rules": {
      "type": "object",
      "description": "Per-agent overrides for allow/deny types and size limits",
      "additionalProperties": {
        "type": "object",
        "properties": {
          "allow_types": {
            "type": "array",
            "items": {"type": "string"}
          },
          "deny_types": {
            "type": "array",
            "items": {"type": "string"}
          },
          "max_file_size_mb": {
            "type": "integer",
            "minimum": 0
          },
          "masking": {
            "type": "object",
            "additionalProperties": {"type": "boolean"}
          }
        },
        "additionalProperties": false
      }
    },
    "sensitive_paths": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Paths to exclude even when folder is accessible"
    },
    "cache": {
      "type": "object",
      "properties": {
        "max_bytes": {
          "type": "integer",
          "minimum": 0,
          "description": "Optional cache size limit in bytes"
        },
        "purge_days": {
          "type": "integer",
          "minimum": 0,
          "description": "Optional cache purge interval in days"
        }
      },
      "additionalProperties": false
    },
    "security": {
      "type": "object",
      "properties": {
        "processing": {
          "type": "string",
          "enum": [
            "local_only",
            "hybrid",
            "cloud_allowed"
          ]
        },
        "pii_filter": {
          "type": "boolean"
        }
      },
      "additionalProperties": false
    },
    "indexing": {
      "type": "object",
      "properties": {
        "mode": {
          "type": "string",
          "enum": [
            "realtime",
            "scheduled",
            "manual"
          ]
        },
        "cron": {
          "type": "string",
          "description": "Cron expression when mode=scheduled"
        }
      },
      "additionalProperties": false
    },
    "retention": {
      "type": "object",
      "properties": {
        "summary_days": {
          "type": "integer",
          "minimum": 0
        },
        "preview_cache": {
          "type": "boolean"
        }
      },
      "additionalProperties": false
    },
    "id": {
      "type": "string",
      "description": "Optional policy identifier"
    },
    "label": {
      "type": "string",
      "description": "Display label for UI"
    },
    "type": {
      "type": "string",
      "description": "Folded policy type metadata"
    },
    "scope": {
      "type": "string",
      "description": "Scope hint for UI integrations"
    },
    "policy": {
      "type": "string",
      "description": "Legacy policy tag metadata"
    }
  },
  "additionalProperties": false
}
